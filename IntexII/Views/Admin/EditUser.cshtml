@model EditUserViewModel

<h2>Edit User</h2>

<div class="container">
    <form asp-action="EditUser" class="mt-4">
        <input type="hidden" asp-for="User.Id" />

        <div class="form-group">
            <label for="Email">Email</label>
            <input asp-for="User.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="CustomerId">Customer ID</label>
            <input asp-for="User.CustomerId" class="form-control" />
        </div>

        <div class="form-group">
            <label>Select Roles:</label>
            @foreach (var role in Model.Roles)
            {
                <div class="form-check">
                    <input type="checkbox" name="SelectedRoles" value="@role" class="form-check-input" @(Model.SelectedRoles != null && Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
