
@model List<ApplicationUser>

  <h1>User Management</h1>
  
  <table class="table">
      <thead>
          <tr>
              <th>Id</th>
              <th>Customer ID</th>
              <th>Username</th>
              <th>Email</th>
          </tr>
      </thead>
      <tbody>
          @foreach (var user in Model)
          {
              <tr>
                  <td>@user.Id</td>
                  <td>(ID pending)</td>
                  <td>@user.UserName</td>
                  <td>@user.Email</td>
                  <td><a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a></td>
                  <td><a asp-controller="Admin" asp-action="DeleteUser"  asp-route-id="@user.Id" class="btn btn-danger">Delete</a></td>
              </tr>
          }
      </tbody>
  </table>
  