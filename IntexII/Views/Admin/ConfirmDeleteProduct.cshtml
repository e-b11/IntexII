@model Product

@{
    ViewData["Title"] = "Confirm Deletion";
}

<h2>Do you want to delete product: @Model.ProductName?</h2>

<form asp-controller="Admin" asp-action="DeleteProduct" method="post">
    <input type="hidden" name="id" value="@Model.ProductId">
    <a asp-controller="Admin" asp-action="ManageProducts" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-danger">Delete Product</button>
</form>
