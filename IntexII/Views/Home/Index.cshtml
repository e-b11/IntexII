@{
    ViewData["Title"] = "Home";
}

@model IQueryable<Product>;

<div class="hero">
    <picture>
        <source media="(min-width: 801px)" srcset="~/img/lego-hero-2000px.jpg" />
        <source media="(min-width: 401px)" srcset="~/img/lego-hero-800px.jpg"/>
        <source media="(max-width: 400px)" srcset="~/img/lego-hero-400px.jpg"/>
        <img src="images/hero-breakfast-800px.jpg"
             alt="Legos of many colors scattered on floor">
    </picture>
    <div class="hero-text-wrapper">
        <h1>Brickwell</h1>
        <p>
            <a class=".herobutton"><em>SHOP NOW</em></a>
        </p>
    </div>
</div>

<div class="container">
    <main role="main" class="pb-3">
        <div class="topproducts">
            @foreach (Product p in ViewBag.TopProducts)
            {
                <div class="productcards">
                    <h3>@p.ProductName</h3>
                    <img src="@p.ImgLink" alt="@p.ProductName" width="500" height="636"
                         loading="lazy">
                    <p>$@p.Price.ToString("0.00")</p>
                </div>
            }
        </div>
    </main>
</div>


